<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.SpaceShooter.FullscreenContainer"
    tools:context="com.huda.kickfoot.MainActivity">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/base_navigationated_turn"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"

        app:navGraph="@navigation/base_navigationated_turn" />
    <EditText
        android:id="@+id/storyTitleEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:hint="Write tittle"
        android:visibility="invisible"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/randomWordsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:visibility="invisible"

        app:layout_constraintTop_toBottomOf="@id/storyTitleEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/generateWordsButton"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/randomWordsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:visibility="invisible"

        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/generateWordsButton"
        app:layout_constraintEnd_toEndOf="@id/generateWordsButton"
        app:layout_constraintTop_toTopOf="@id/generateWordsButton"
        app:layout_constraintBottom_toBottomOf="@id/generateWordsButton"
        android:text="GENERATE NEW WORDS"
        android:visibility="invisible"
        />
</FrameLayout>